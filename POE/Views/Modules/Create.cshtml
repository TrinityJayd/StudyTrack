@model DbManagement.Models.Module

@{
    ViewData["Title"] = "Create";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<h1>Add Modules</h1>

<h4>Module Information</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>               
            <div class="form-group">
                <label asp-for="ModuleCode" class="control-label">Module Code</label>
                <input id="moduleCode" asp-for="ModuleCode" required class="form-control" />
                <span id="modCode" asp-validation-for="ModuleCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleName" class="control-label">Module Name</label>
                <input asp-for="ModuleName" required class="form-control" />
                <span id="modName" asp-validation-for="ModuleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credits" class="control-label"></label>
                <input asp-for="Credits" type="number" required min="8" max="15" class="form-control" />
                <span id="modCredits"  asp-validation-for="Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassHours" class="control-label">Class Hours</label>
                <input asp-for="ClassHours" type="number" required min="2" max="6" class="form-control" />
                <span id="hours" asp-validation-for="ClassHours" class="text-danger"></span>
            </div>        
            <div class="form-group">
                <input type="submit" value="Add Module" class="submit-btns" />
                <input id="toHome" type="submit" value="To Home" class="submit-btns" />
            </div>
        </form>
    </div>
    <div>
        <asp:ListBox ID="lstModules" runat="server" AutoPostBack="True"></asp:ListBox>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
