@model IEnumerable<DbManagement.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<!doctype html>
<html lang="ar">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.104.2">
    <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/album-rtl/">
    <link href="css/bootstrap.rtl.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
    <main>
        <div id="reminder" style="background-color:#8C52FF; color:white; height:2rem; border-radius:30px;">
            <p style="padding-top: 3px;font-weight:bold; text-align:center; ">@ViewBag.Reminder</p>
        </div>
        <div class="album py-5" style="padding-top:1.5rem">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <div class="col">
                        <div class="card">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/read.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="Modules" asp-action="Create">
                                <input type="submit" value="Add Modules" class="submit-btns home-btn" />
                            </a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/scrum.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="Modules" asp-action="Details">
                                <input type="submit" value="View Modules" class="submit-btns home-btn" />
                            </a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/read_couch.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="StudySessions" asp-action="Create">
                                <input type="submit" value="Log Study Session" class="submit-btns home-btn" />
                            </a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/book_ladder.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="StudySessions" asp-action="SessionsRequired">
                                <input type="submit" value="Study Sessions Required" class="submit-btns home-btn" />
                            </a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/brainstorm.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="StudySessions" asp-action="Index">
                                <input type="submit" value="Study Sessions" class="submit-btns home-btn" />
                            </a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/online.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="FutureStudySessions" asp-action="Create">
                                <input type="submit" value="Remind Me To Study" class="submit-btns home-btn" />
                                </a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/bookshelf.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="FutureStudySessions" asp-action="Index">
                                <input type="submit" value="All Future Study Sessions" class="submit-btns home-btn" />
                                </a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/learn.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="UserSemesters" asp-action="Create">
                                <input type="submit" value="Edit Semester Details" class="submit-btns home-btn" />
                            </a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ">
                            <img id="home-img" class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/images/read_couch.png" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <a id="home-btns" asp-controller="Graph" asp-action="Index">
                                <input type="submit" value="Study Statistics" class="submit-btns home-btn" />
                                </a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>

    </main>

    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

