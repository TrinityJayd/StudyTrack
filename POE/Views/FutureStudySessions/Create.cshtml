@model DbManagement.FutureStudySessionHtmlModel

@{
    ViewData["Title"] = "Create";
}

<h1>Future Study Session</h1>

<h4>Schedule a study session for the future and we will remind you when you log on.</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModuleCode" class="control-label">Module Code</label>
                <select asp-for="ModuleCode" style="appearance:menulist;" required class="form-control" asp-items="ViewBag.Modules"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateToStudy" class="control-label">Date To Study</label>
                <input asp-for="DateToStudy" type="date" required class="form-control" />
                <span asp-validation-for="DateToStudy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="submit-btns" />
            </div>
        </form>
    </div>
</div>
