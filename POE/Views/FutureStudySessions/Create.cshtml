@model DbManagement.Models.FutureStudySession

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FutureStudySession</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Module.ModuleCode" class="control-label"></label>
                <select asp-for="Module.ModuleCode" required class="form-control" asp-items="ViewBag.Modules"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateToStudy" class="control-label"></label>
                <input asp-for="DateToStudy" type="date" required class="form-control" />
                <span asp-validation-for="DateToStudy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="submit-btns" />
            </div>
        </form>
    </div>
</div>
